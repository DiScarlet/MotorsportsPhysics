@page "/race-menu"
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.WebUtilities
@using MotorsportsPhysics.Components.Pages
@inject NavigationManager Nav

<PageTitle>Select Difficulty</PageTitle>

<div class="grid grid-cols-1 lg:grid-cols-2 min-h-screen bg-white">

    <!-- LEFT: Maxie with the new difficulty-dialogue -->
    <div class="flex items-center justify-center p-8">
        <MotorsportsPhysics.Components.Pages.MaxiDifficulty @ref="maxi" OnDialogueComplete="HandleDialogueComplete" />
    </div>

    <!-- RIGHT: Difficulty Cards -->
    <div class="p-8 bg-white overflow-y-auto">

        <h1 class="text-3xl font-bold mb-2">Choose your challenge</h1>

        @if (!string.IsNullOrWhiteSpace(_topicLabel))
        {
            <p class="text-gray-700 mb-1">
                Topic: <strong>@_topicLabel</strong>
            </p>
        }

        <p class="text-gray-700 mb-8">
            Maxie is waiting — pick a mode to begin.
        </p>

        <div class="grid gap-6 md:grid-cols-3">

            <!-- Easy -->
            <div class="rounded-xl border border-primary/20 bg-white p-6 shadow-sm flex flex-col">
                <h2 class="text-xl font-semibold mb-2">Easy</h2>
                <p class="text-gray-600 mb-4">
                    Animated track. One question at a time. Explanations on. No timer.
                </p>
                @if (maxi?.DialogueComplete ?? false)
                {
                    <a class="mt-auto inline-flex items-center justify-center rounded-lg bg-primary px-4 py-2 
                              font-semibold text-white hover:bg-opacity-90"
                       href="@_easyHref">
                        Start
                    </a>
                }
                else
                {
                    <button disabled class="mt-auto inline-flex items-center justify-center rounded-lg bg-gray-400 px-4 py-2 
                                           font-semibold text-white cursor-not-allowed opacity-60">
                        Start
                    </button>
                }
            </div>

            <!-- Medium -->
            <div class="rounded-xl border border-primary/20 bg-white p-6 shadow-sm flex flex-col">
                <h2 class="text-xl font-semibold mb-2">Medium</h2>
                <p class="text-gray-600 mb-4">
                    Race five rivals. Explanations on. No timer. No stopping for missed answers.
                </p>
                @if (maxi?.DialogueComplete ?? false)
                {
                    <a class="mt-auto inline-flex items-center justify-center rounded-lg bg-primary px-4 py-2 
                              font-semibold text-white hover:bg-opacity-90"
                       href="@_mediumHref">
                        Start
                    </a>
                }
                else
                {
                    <button disabled class="mt-auto inline-flex items-center justify-center rounded-lg bg-gray-400 px-4 py-2 
                                           font-semibold text-white cursor-not-allowed opacity-60">
                        Start
                    </button>
                }
            </div>

            <!-- High -->
            <div class="rounded-xl border border-primary/20 bg-white p-6 shadow-sm flex flex-col">
                <h2 class="text-xl font-semibold mb-2">High</h2>
                <p class="text-gray-600 mb-4">
                    Five rivals. Timer on. No explanations. Miss a question → your car stops.
                </p>
                @if (maxi?.DialogueComplete ?? false)
                {
                    <a class="mt-auto inline-flex items-center justify-center rounded-lg bg-primary px-4 py-2 
                              font-semibold text-white hover:bg-opacity-90"
                       href="@_highHref">
                        Start
                    </a>
                }
                else
                {
                    <button disabled class="mt-auto inline-flex items-center justify-center rounded-lg bg-gray-400 px-4 py-2 
                                           font-semibold text-white cursor-not-allowed opacity-60">
                        Start
                    </button>
                }
            </div>

        </div>

        <div class="mt-8">
            <a class="text-primary hover:underline" href="/topics">Back to topics</a>
        </div>
    </div>
</div>

@code {
  private MaxiDifficulty? maxi;
    private string _topic = "cornering";
    private string _topicLabel = "Cornering Dynamics";
    private string _topicQuery = string.Empty;
    private string _easyHref = "/race-quiz?difficulty=easy";
    private string _mediumHref = "/race-quiz?difficulty=medium";
    private string _highHref = "/race-quiz?difficulty=high";

    private async Task HandleDialogueComplete()
    {
        StateHasChanged();
    }

    protected override void OnInitialized()
    {
        var uri = Nav.ToAbsoluteUri(Nav.Uri);
        var query = QueryHelpers.ParseQuery(uri.Query);

        _topic = query.TryGetValue("topic", out var v) ? v.ToString() : "cornering";

        _topicLabel = _topic.ToLowerInvariant() switch
        {
            "cornering" => "Cornering Dynamics",
            "aerodynamics" => "Aerodynamics",
            "acceleration" => "Acceleration & Power",
            "topspeed" => "Top Speed & Slipstream",
            "downforce" => "Downforce & Tires",
            _ => "Cornering Dynamics"
        };

        _topicQuery = string.IsNullOrEmpty(_topic) ? string.Empty : $"&topic={_topic}";

        _easyHref = $"/race-quiz?difficulty=easy{_topicQuery}";
        _mediumHref = $"/race-quiz?difficulty=medium{_topicQuery}";
        _highHref = $"/race-quiz?difficulty=high{_topicQuery}";
    }
}
