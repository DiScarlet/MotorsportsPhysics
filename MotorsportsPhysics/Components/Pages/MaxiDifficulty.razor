<div class="flex items-start justify-center relative w-full">
    <div class="relative w-full">

        <!-- Background -->
        <img src="/images/Maxie/Maxie-BG.png"
             alt="Maxie Background"
             class="w-full object-contain" />

        <!-- Maxie Sprite -->
        <img src="@CurrentSprite"
             alt="Maxie"
             class="absolute top-[68%] left-[31%] transform -translate-x-1/2 -translate-y-1/2 
                    w-48 object-contain" />

        <!-- Dialogue Bubble -->
        <img src="/images/Maxie/bubble-left.png"
             alt="Bubble"
               class="absolute top-[5%] left-[8%] w-20% h-42% object-contain" />

        <!-- Dialogue Text -->
        <div class="absolute top-[20%] left-[52%] transform -translate-x-1/2 w-96 text-center">
            <p class="text-black text-xl font-semibold leading-snug">
                @CurrentDialogue
            </p>
        </div>

        <!-- Continue Button -->
        @if (ShowContinueButton)
        {
            <button class="absolute bottom-[12%] left-[60%] transform -translate-x-1/2 
                           bg-primary text-white px-6 py-2 rounded-lg font-semibold shadow 
                           hover:bg-opacity-90 transition"
                    @onclick="NextDialogue">
                Continue
            </button>
        }
    </div>
</div>
